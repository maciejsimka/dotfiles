browser firefox
refresh-on-startup yes

# reload
auto-reload yes
reload-time 30

# notifications
notify-format "newsboat: %n unread articles"
notify-program notify-send

# ignores
ignore-article "*" "title =~ \"Sponsor\""
ignore-article "*" "title =~ \"Advertisement\""
ignore-mode "display"

# bindings

unbind-key g # bound to `sort` by default
bind-key g home

unbind-key G # bound to `rev-sort` by default
bind-key G end

unbind-key h
bind-key h quit

unbind-key j # bound to 'next-feed' by default
bind-key j down

unbind-key k # bound to 'prev-feed' by default
bind-key k up

unbind-key l # bound to 'toggle-show-read-feeds' by default
bind-key l open
