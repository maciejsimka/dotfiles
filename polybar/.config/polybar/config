[colors]
bg = ${xrdb:background}
fg = ${xrdb:foreground}
blk = ${xrdb:color0}
bblk = ${xrdb:color8}
red = ${xrdb:color1}
bred = ${xrdb:color9}
grn = ${xrdb:color2}
bgrn = ${xrdb:color10}
ylw = ${xrdb:color3}
bylw = ${xrdb:color11}
blu = ${xrdb:color4}
bblu = ${xrdb:color12}
mag = ${xrdb:color5}
bmag = ${xrdb:color13}
cyn = ${xrdb:color6}
bcyn = ${xrdb:color14}
wht = ${xrdb:color7}
bwht = ${xrdb:color15}

[bar/default]
monitor = ${env:MONITOR:HDMI-2}
monitor-fallback = ${env:MONITOR:DP-1}
width = 100%
height = 32
radius = 0.0
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 4
line-color = ${colors.bblk}

border-size = 5

padding-left = 0
padding-right = 3

module-margin-left = 1
module-margin-right = 1

font-0 = "Iosevka Term:pixelsize=11;2"
font-1 = "FontAwesome:pixelsize=11;2"

modules-left = wlan eth memory temperature cpu
modules-center = i3
modules-right = xwindow date time

tray-position = left
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 

label-mode-padding = 2
label-mode-foreground = ${colors.fg}
label-mode-background = ${colors.bg}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.fg}
label-focused-background = ${colors.bg}
label-focused-underline = ${colors.red}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${colors.red}
label-unfocused-background = ${colors.bg}
label-unfocused-underline = ${colors.bg}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${colors.bg}
label-visible-underline = ${colors.blu}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.bg}
label-urgent-underline = ${colors.grn}
label-urgent-padding = ${self.label-focused-padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.bblk}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.bblk}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <label-connected>
format-connected-prefix = 
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnected-foreground = ${colors.bblk}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-prefix = 
label-connected = " %local_ip%"
label-disconnected = disconnected
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

date = %d/%m/%Y

format-prefix = 
format-prefix-foreground = ${colors.bblk}

label = " %date%"

[module/time]
type = internal/date
interval = 1

time = " %H:%M"

format-prefix = 
format-prefix-foreground = ${colors.bblk}

label = %time%

[module/temperature]
type = internal/temperature
thermal-zone = 3
warn-temperature = 60

format = <label>
format-warn =   <label-warn>
format-prefix = 
format-prefix-foreground = ${colors.bblk}

label = " %temperature%"
label-warn = " %temperature%!"
label-warn-foreground = ${colors.red}

[settings]
screenchange-reload = true
compositing-background = xor
compositing-foreground = source

[global/wm]
margin-top = 0
margin-bottom = 0

