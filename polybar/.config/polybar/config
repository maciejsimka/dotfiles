[colors]
bg = ${xrdb:background}
fg = ${xrdb:foreground}
blk = ${xrdb:color0}
bblk = ${xrdb:color8}
red = ${xrdb:color1}
bred = ${xrdb:color9}
grn = ${xrdb:color2}
bgrn = ${xrdb:color10}
ylw = ${xrdb:color3}
bylw = ${xrdb:color11}
blu = ${xrdb:color4}
bblu = ${xrdb:color12}
mag = ${xrdb:color5}
bmag = ${xrdb:color13}
cyn = ${xrdb:color6}
bcyn = ${xrdb:color14}
wht = ${xrdb:color7}
bwht = ${xrdb:color15}

[bar/default]
monitor = ${env:MONITOR:HDMI-1}
monitor-fallback = ${env:MONITOR:HDMI-2}
width = 100%
height = 30
radius = 0.0
fixed-center = true

background = ${colors.bblk}
foreground = ${colors.bwht}

line-size = 2
line-color = ${colors.bblk}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = "Iosevka Term:pixelsize=9;2"
font-1 = "FontAwesome:pixelsize=9;2"

modules-left = i3
modules-center = xwindow
modules-right = cpu temperature memory arch-updates datetime


scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 

label-mode-padding = 2
label-mode-foreground = ${colors.fg}
label-mode-background = ${colors.bg}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.fg}
label-focused-background = ${colors.bg}
label-focused-underline = ${colors.bg}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${colors.blu}
label-unfocused-background = ${colors.bg}
label-unfocused-underline = ${colors.bg}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${colors.bg}
label-visible-underline = ${colors.bg}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${colors.bred}
label-urgent-background = ${colors.bg}
label-urgent-underline = ${colors.bg}
label-urgent-padding = ${self.label-focused-padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.blu}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.blu}
label = %percentage_used%%

[module/datetime]
type = internal/date
interval = 1

date = "%a %b %e, %H:%M "

format-prefix = 
format-prefix-foreground = ${colors.blu}

label = " %date%"

[module/temperature]
type = internal/temperature
thermal-zone = 3
warn-temperature = 60

format = <label>
format-warn =   <label-warn>
format-prefix = 
format-prefix-foreground = ${colors.blu}

label = " %temperature%"
label-warn = " %temperature%!"
label-warn-foreground = ${colors.red}

[module/arch-updates]
type = custom/script
interval = 3600
exec = "checkupdates | wc -l"
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.blu}
click-left = "kitty -e update"

[settings]
screenchange-reload = true
compositing-background = xor
compositing-foreground = source

[global/wm]
margin-top = 0
margin-bottom = 0

