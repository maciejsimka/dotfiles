format = <label-toggle> <menu>
format-padding = 1
menu-0-0 =  logout
menu-0-0-exec = i3-msg exit
menu-0-1 = ⏾ sleep
menu-0-1-exec = systemctl suspend
menu-0-2 =  hibernate
menu-0-2-exec = systemctl hibernate
menu-0-3 =  reboot
menu-0-3-exec = sysytemctl reboot
menu-0-4 =  shutdown
menu-0-4-exec = sysytemctl poweroff
menu-0-5 =  cancel

[module/temperature]
