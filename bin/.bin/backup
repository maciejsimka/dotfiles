#!/bin/sh

REMOTE=drive
MEDIA=/media/minerva

DOCUMENTS=$HOME/Documents
PASS=$HOME/pass
WORK=$HOME/work
WALLPAPERS=$HOME/wallpapers
BITWIG=$MEDIA/bitwig
EBOOKS=$MEDIA/ebooks
RECORDINGS=$MEDIA/recordings

find $DOCUMENTS | entr -dr rclone sync /_ $REMOTE:Documents \
& find $PASS | entr -dr rclone sync /_ $REMOTE:pass \
& find $WORK | entr -dr rclone sync /_ $REMOTE:work \
& find $WALLPAPERS | entr -dr rclone sync /_ $REMOTE:wallpapers \
& find $BITWIG | entr -dr rclone sync /_ $REMOTE:bitwig \
& find $EBOOKS | entr -dr rclone sync /_ $REMOTE:ebooks \
& find $RECORDINGS | entr -dr rclone sync /_ $REMOTE:recordings
